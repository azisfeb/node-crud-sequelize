{% include 'partial/head.twig' %}
{% include 'partial/menubar.twig' %}

<div class="container">
  <h2 class="text-center">{{title}}</h2>
  <table id="table-main" class="table table-bordered table-hover table-striped">
    <thead>
      <tr>
        <th>No</th>
        <th>Title</th>
        <th>Create By</th>
      </tr>
    </thead>
    <tbody>
      {% set no = 0 %}
      {% for value in data %}
        {% set no = no + 1 %}
        <tr>
          <td>{{ no }}</td>
          <td>{{ value.title }}</td>
          <td>{{ value.User.username }}</td>
        </tr>
      {% endfor %}

    </tbody>
  </table>
</div>

{% include 'partial/footer.twig' %}
